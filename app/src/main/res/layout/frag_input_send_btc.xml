<LinearLayout
    style="@style/StandardLinearLayout"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <include layout="@layout/frag_input_fiat_converter"/>

    <TextView
        android:maxWidth="235sp"
        style="@style/MarginInfo"
        android:visibility="gone"
        android:id="@+id/addressData"
        android:layout_width="wrap_content"/>

    <LinearLayout
        android:id="@+id/addressActions"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            style="@style/MarginInfo"
            android:id="@+id/addressPaste"
            android:layout_width="wrap_content"
            android:text="@string/spend_address_tip"/>

        <Button
            style="@style/MarginInfo"
            android:id="@+id/addressScanner"
            android:layout_width="wrap_content"
            android:drawableLeft="@drawable/qr_18dp"
            android:text="QR"/>

    </LinearLayout>

    <View style="@style/GrayDivider"/>
</LinearLayout>