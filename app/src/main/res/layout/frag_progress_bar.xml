<fr.castorflex.android.smoothprogressbar.SmoothProgressBar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    app:spb_interpolator="spb_interpolator_acceleratedecelerate"
    app:spb_progressiveStart_activated="true"
    app:spb_stroke_separator_length="0dp"
    app:spb_progressiveStart_speed="1.2"
    app:spb_progressiveStop_speed="1.2"
    app:spb_color="@color/black"
    app:spb_mirror_mode="false"
    app:spb_sections_count="2"
    app:spb_stroke_width="2dp"
    app:spb_reversed="false"
    app:spb_speed="1.2"

    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:indeterminate="true"/>