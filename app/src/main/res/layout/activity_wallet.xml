<FrameLayout
    style="@style/StandardLinearLayoutPage"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.ogaclejapan.smarttablayout.SmartTabLayout
        app:stl_defaultTabTextColor="@android:color/white"
        app:stl_indicatorColor="@android:color/white"
        app:stl_indicatorInterpolation="linear"
        app:stl_defaultTabTextSize="14sp"
        app:stl_indicatorThickness="2dp"
        app:stl_underlineThickness="2dp"
        app:stl_distributeEvenly="true"
        app:stl_dividerThickness="0dp"

        android:layout_height="42sp"
        android:background="@android:color/black"
        android:layout_width="match_parent"
        android:id="@+id/walletPagerTab"/>

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/walletPager"/>

</FrameLayout>