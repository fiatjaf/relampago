<LinearLayout
    style="@style/StandardLinearLayout"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <Button
        style="@style/TransButton"
        android:id="@+id/paymentHash"
        android:text="@string/ln_share_hash"/>

    <Button
        style="@style/TransButton"
        android:id="@+id/paymentProof"
        android:text="@string/ln_share_proof"
        android:visibility="gone"/>

    <Button
        style="@style/TransButton"
        android:id="@+id/paymentRouting"
        android:text="@string/ln_share_routing"
        android:visibility="gone"/>

    <View style="@style/GrayDivider"/>

    <TextView
        style="@style/MarginInfo"
        android:id="@+id/paymentDetails"
        android:layout_width="wrap_content"/>

    <View style="@style/GrayDivider"/>

</LinearLayout>