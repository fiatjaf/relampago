<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="horizontal"
    android:paddingLeft="@dimen/app_padding" android:paddingRight="@dimen/app_padding"
    android:paddingTop="12dp" android:paddingBottom="14dp" android:gravity="center"
    android:layout_height="wrap_content" android:layout_width="match_parent"
    android:background="?attr/selectableItemBackground"
    android:clickable="true" android:focusable="true">

    <TextView
        android:maxLines="2"
        style="@style/BaseText"
        android:layout_weight="3"
        android:layout_width="0dp"
        android:id="@+id/olympusAddress"/>

    <TextView
        android:maxLines="1"
        android:gravity="end"
        style="@style/BaseText"
        android:id="@+id/olympusTokens"
        android:layout_width="wrap_content"/>

</LinearLayout>