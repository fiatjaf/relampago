<LinearLayout
    style="@style/StandardLinearLayout"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <EditText
        android:paddingTop="20dp"
        style="@style/BigInputText"
        android:digits=". 0123456789"
        android:inputType="numberDecimal"
        android:id="@+id/fiatInputAmount"
        android:focusableInTouchMode="true"/>

    <info.hoang8f.android.segmented.SegmentedGroup
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/fiatType"
        android:paddingTop="10dp">

        <RadioButton
            android:text="$"
            android:textSize="18sp"
            android:id="@+id/typeUSD"
            android:layout_width="55dp"
            style="@style/RadioButton"/>

        <RadioButton
            android:text="€"
            android:textSize="18sp"
            android:id="@+id/typeEUR"
            android:layout_width="55dp"
            style="@style/RadioButton"/>

        <RadioButton
            android:text="¥"
            android:textSize="18sp"
            android:id="@+id/typeJPY"
            android:layout_width="55dp"
            style="@style/RadioButton"/>

        <RadioButton
            android:text="CNY"
            android:textSize="18sp"
            android:id="@+id/typeCNY"
            style="@style/RadioButton"/>

    </info.hoang8f.android.segmented.SegmentedGroup>

    <TextView
        android:text="="
        style="@style/StdText"
        android:paddingTop="15dp"
        android:layout_width="wrap_content"/>

    <EditText
        android:minWidth="100dp"
        android:focusable="true"
        style="@style/BigInputText"
        android:id="@+id/inputAmount"
        android:digits=". 0123456789"
        android:inputType="numberDecimal"/>

    <TextView
        style="@style/StdText"
        android:id="@+id/hintDenom"
        android:paddingBottom="25dp"
        android:layout_width="fill_parent"/>

    <View style="@style/GrayDivider"/>
</LinearLayout>