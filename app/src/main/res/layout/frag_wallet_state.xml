<LinearLayout
    style="@style/StandardLinearLayout"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_height="wrap_content" android:layout_width="fill_parent"
        android:paddingLeft="@dimen/app_padding" android:paddingRight="@dimen/app_padding"
        android:paddingTop="12dp" android:paddingBottom="14dp"
        android:orientation="horizontal">

        <TextView
            style="@style/BaseText"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:text="@string/wallet_state"/>

        <TextView
            style="@style/BaseText"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:id="@+id/stateContent"
            android:gravity="end"/>

    </LinearLayout>

    <View style="@style/GrayDivider"/>
</LinearLayout>